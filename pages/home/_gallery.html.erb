<%= tag.div id: gallery_id, class: "flex flex-col items-center gap-4 mt-8" do %>
  <%= tag.div do %>
    <%= tag.img src: image_urls.first, class: "w-full h-auto rounded-xl shadow-lg" %>
  <% end %>

  <%= tag.div class: "flex flex-row gap-4" do %>
    <% image_urls.map.with_index do |image_url, index| %>
      <%= tag.button "data-id": index + 1, onclick: "setImage('#{gallery_id}', '#{index + 1}')" do %>
        <%= tag.img src: image_url, class: "w-14 h-14 rounded-xl shadow-lg" %>
      <% end %>
    <% end %>
  <% end %>

  <script>
    setImage('<%= gallery_id %>', 1);
  </script>
<% end %>
